<!DOCTYPE html>

<!-- views/signIn.ejs -->
<html lang="en">

<head>
    <% include ../partials/head %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
</head>

<body class="container">
    <header>
        <%- include('../partials/header',{req:req}); %>
    </header>
    <main>

        <div class="row">


            <form method="POST">
                <legend>Reset Password</legend>
                <div class="form-group">
                  <label for="password">New Password</label>
                  <input class="form-control" type="password" name="password" value="" placeholder="New password" autofocus="autofocus"/>
                </div>
                <div class="form-group">
                  <label for="confirm">Confirm Password</label>
                  <input class="form-control" type="password" name="confirm" value="" placeholder="Confirm password"/>
                </div>
                <div class="form-group">
                  <button class="btn btn-primary" type="submit">Update Password</button>
                </div>
              </form>

           

        </div>





    </main>
    <footer>
        <% include ../partials/footer %>
    </footer>
</body>


</html>

